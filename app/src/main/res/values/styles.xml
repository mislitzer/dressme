<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily"></item>
    </style>

    <style name="topBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#01ae6c</item>
    </style>

    <style name="topBoxWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#01ae6c</item>
    </style>

    <style name="topBoxLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#01ae6c</item>
    </style>

    <style name="topBoxSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#01ae6c</item>
    </style>

    <style name="halfBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="threeBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.75</item>
    </style>

    <style name="topBoxContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
